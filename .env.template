# NVIDIA API Configuration
# Get your API key from https://build.nvidia.com/
NVIDIA_API_KEY=nvapi-xxx

# Riva Configuration
# Change if using remote Riva server
RIVA_URI=localhost:50051
RIVA_HTTP_URI=http://localhost:9000

# Model Configuration
# Available models:
# - qwen/qwen3-coder-480b-a35b-instruct (default)
# - other nvidia/integrate.api models
MODEL_NAME=qwen/qwen3-coder-480b-a35b-instruct

# Audio Configuration
# Device index (0 = default microphone)
AUDIO_DEVICE_INDEX=0

# Voice Configuration
# TTS voice name
VOICE_NAME=en-US-Neural2-C

# Logging Configuration
# DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
